{
  "manifest_version": 3,
  "name": "Related Pages",
  "version": "1.0.0",
  "description": "Track and visualize relationships between web pages. See which pages you visit together frequently and discover related content through your browsing patterns.",
  "author": "gthecht",
  "homepage_url": "https://github.com/gthecht/related-pages",
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "sidebar_action": {
    "default_title": "Related Pages",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "related-pages@gthecht.github.io",
      "strict_min_version": "112.0"
    }
  }
}
