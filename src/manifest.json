{
    "manifest_version": 2,
    "name": "Related Pages",
    "version": "1.0.0",
    "description": "Track and visualize relationships between web pages",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "sidebar_action": {
        "default_title": "Related Pages",
        "default_panel": "sidebar/sidebar.html",
        "default_icon": "icons/icon-32.png",
        "browser_style": true
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}
